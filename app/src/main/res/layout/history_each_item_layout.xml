<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/text_view_background_shape"
    android:layout_margin="10dp">
    <TextView
        android:id="@+id/header_text_history_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATE-DAY FORMAT"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:textSize="20sp"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/on_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ON TIME : "
        android:textColor="#000000"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="64dp"
        android:layout_marginLeft="24dp"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/off_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OFF TIME : "
        android:textColor="#000000"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="94dp"
        android:layout_marginLeft="24dp"
        android:textSize="18sp"/>
</RelativeLayout>